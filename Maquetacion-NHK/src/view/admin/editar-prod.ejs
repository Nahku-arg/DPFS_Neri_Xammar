<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head/head', {styles: ['/styles/editar-producto.css']}) %>
<body>

    <form action="/products/editar/<%= producto.id %>" method="POST" enctype="multipart/form-data">
        <h2>Editar producto</h2>
        <% if (typeof errors !== 'undefined') { %>
                <ul style="color:red;">
                    <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>
        <label>
            Nombre del producto
            <input type="text" name="name" value="<%= producto.name %>">
        </label>

        <label>
            Descripción
            <textarea name="description"><%= producto.description %></textarea>
        </label>

        <label>
            Imagen actual
            <img src="/<%= producto.image %>" alt="Imagen del producto">
            <input type="file" name="image">
        </label>

        <label>
            Categoría
            <select name="categoryId">
                <% categorias.forEach(cat => { %>
                    <option value="<%= cat.id %>" <%= cat.id === producto.categoryId ? 'selected' : '' %>>
                        <%= cat.name %>
                    </option>
                <% }) %>
            </select>
        </label>

        <label>
            Precio
            <input type="number" name="price" value="<%= producto.price %>">
        </label>

        <button type="submit">Guardar cambios</button>
        <button type="button"><a href="/products/crear">Crear Producto</a></button>
    </form>

